// Factorial benchmark in e4
// Usage: ./src/e4peg examples/factorial.e4 <iterations> <n>

iterations := arg1
n := arg2
sum := 0

loop {
  case iterations { 0 -> { break } _ -> { } }
  result := 1
  i := n
  loop {
    case i { 0 -> { break } _ -> { } }
    result := result * i
    i := i - 1
  }
  sum := sum + result
  iterations := iterations - 1
}

print sum
